<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7CC">

    <TextView
        android:id="@+id/custom_text_view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="변경 할 이름을 입력하시오."
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/custom_edit_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/custom_edit_view"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="이름을 입력하시오."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_text_view" />


    <Button
        android:id="@+id/custom_cancel_button_view"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#636363"
        android:padding="10dp"
        android:text="취소"
        app:layout_constraintEnd_toStartOf="@+id/custom_button_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_view" />

    <Button
        android:id="@+id/custom_button_view"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#636363"
        android:enabled="false"
        android:padding="10dp"
        android:text="변경"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/custom_cancel_button_view"
        app:layout_constraintTop_toBottomOf="@+id/custom_edit_view" />

</androidx.constraintlayout.widget.ConstraintLayout>